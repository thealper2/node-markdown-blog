<%- include('partials/header') %>

    <article class="post">
        <header class="post-header">
            <h1>
                <%= post.title %>
            </h1>
            <div class="post-meta">
                <span class="date">
                    <%= formatDate(post.date) %>
                </span>
                <% if (post.tags.length> 0) { %>
                    <div class="tags">
                        <% post.tags.forEach(tag=> { %>
                            <span class="tag">
                                <%= tag %>
                            </span>
                            <% }) %>
                    </div>
                    <% } %>
            </div>
        </header>

        <div class="post-content">
            <%- post.content %>
        </div>

        <a href="/" class="back-button">‚Üê Back to Posts</a>
    </article>

    <%- include('partials/footer') %>